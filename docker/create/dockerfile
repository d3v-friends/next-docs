FROM node:20.10.0

WORKDIR src

# next-doc pull
RUN git clone https://github.com/d3v-friends/next-docs .
RUN git pull
RUN npm i -g pnpm
RUN pnpm install


# next build
RUN pnpm run build

# vscode install
COPY ./docker/create/ins_vscode.sh .
RUN sh ins_vscode.sh


ENTRYPOINT [ "pnpm", "run", "start" ]
